<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/equationInputLabel"
        android:labelFor="@+id/userEquationInputField"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="start|center_vertical"
        android:text="@string/equationLabelString"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/userEquationInputField"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:autofillHints="equation"
        android:background="#BFFFFFFF"
        android:gravity="start|center_vertical"
        android:hint="@string/equationFieldPlaceholder"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#808080"
        app:layout_constraintLeft_toRightOf="@+id/equationInputLabel"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/user_x_valueInputLabel"
        android:labelFor="@+id/user_x_valueInputField"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="start|center_vertical"
        android:text="@string/x_valueLabelString"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/equationInputLabel"
        />

    <EditText
        android:id="@+id/user_x_valueInputField"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:autofillHints="x value"
        android:background="#BFFFFFFF"
        android:gravity="start|center_vertical"
        android:hint="@string/x_valuePlaceholder"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#808080"
        app:layout_constraintLeft_toRightOf="@id/equationInputLabel"
        app:layout_constraintTop_toBottomOf="@id/userEquationInputField"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/inputConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmInput_button"
        android:backgroundTint="#0091ff"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_x_valueInputField"
        />

    <TextView
        android:id="@+id/resultHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="28dp"
        android:background="#0091ff"
        android:fontFamily="monospace"
        android:text="@string/resultHeader_text"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputConfirmButton" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#BFFFFFFF"
        android:fontFamily="monospace"
        android:text="@string/resultDefault_text"
        android:textColor="#000000"
        android:textColorHint="#808080"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultHeader" />

    <!-- <Button
        android:id="@+id/faxButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:background="#00BFFF"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        /> -->

</androidx.constraintlayout.widget.ConstraintLayout>